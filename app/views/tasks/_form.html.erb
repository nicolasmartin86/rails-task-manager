<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if task.persisted? %>
      <% if task.completed %>
        <%= f.check_box :completed %>
        <%= f.label :completed, "This task is already completed"  %>
      <% else %>
        <%= f.check_box :completed %>
        <%= f.label :completed, "This task is not yet completed"  %>
      <% end %>
    <% end %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
